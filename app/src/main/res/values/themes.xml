<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyWallpaper" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background</item>
        <item name="colorPrimaryVariant">@color/main_background</item>
        <item name="colorOnPrimary">@color/main_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/main_background</item>
        <!-- Status bar color. -->
        <item name="fontFamily">@font/arlrdbd</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textSize">10sp</item>
        <item name="hideOnScroll">true</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="Theme.MyWallpaper" parent="Base.Theme.MyWallpaper" />

    <style name="Toolbar.TitleText.collapse" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">0.1sp</item>
        <item name="android:alpha">0.0</item>
        <item name="fontFamily">@font/arial_rounded_mt_regular</item>
        <item name="actionTextColorAlpha">0</item>
    </style>


    <style name="Toolbar.TitleText.expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="fontFamily">@font/arial_rounded_mt_regular</item>

    </style>

    <style name="Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="tabGravity">center</item>
        <item name="fontFamily">@font/arial_rounded_mt_regular</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>

    <style name="Image">
        <item name="android:gradientRadius">@dimen/_10ssp</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
        <item name="fontFamily">@font/arial_rounded_mt_regular</item>
        <item name="android:statusBarColor">@color/main_background</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>
</resources>