<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyWallpaper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyWallpaper" parent="Base.Theme.MyWallpaper" />

    <style name="Toolbar.TitleText.collapse" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">0.1sp</item>
        <item name="android:alpha">0.0</item>
        <item name="fontFamily">@font/arial_rounded_mt_regular</item>
        <item name="actionTextColorAlpha">0</item>
    </style>


    <style name="Toolbar.TitleText.expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="fontFamily">@font/arial_rounded_mt_regular</item>

    </style>

    <style name="Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="tabGravity">center</item>
        <item name="fontFamily">@font/arial_rounded_mt_regular</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>

    <style name="Image">
        <item name="android:gradientRadius">@dimen/_10ssp</item>
    </style>
</resources>